{
  "manifest_version": 2,
  "name": "Domain Modifier",
  "version": "1.0",
  "description": "Automatically modifies domains based on regex patterns",
  "permissions": [
    "webNavigation",
    "storage",
    "tabs",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Domain Modifier"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "domain-modifier@example.com",
      "strict_min_version": "57.0"
    }
  }
}
